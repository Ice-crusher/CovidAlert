<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.main.LoginActivity">

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingStart="52dp"
        android:paddingEnd="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.445">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Log in"
            android:textColor="@color/colorDarkGreen"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonLogIn"
            style="@style/Widget.AppCompat.Button.Borderless.Custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/button_background_rounded32_dark_green"
            android:minHeight="52dp"
            android:text="Log in" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/colorDarkGreen"
            android:text="*We are using unique id generated by app to identify your device. Don't clear storage to avoid losing your account"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
